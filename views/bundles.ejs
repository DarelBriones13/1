<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/bundle.css" />
    <title>Dashboard</title>
  </head>
  <body>
    <%- include('partials/sidebar') %>
    
    <main>
      <div class="table-container">
        <div class="header">
          <h2>Bundle List</h2>
          <button class="add-bundle-btn">
            <i class='bx bx-plus'></i> Add Bundle
          </button>
        </div>

        <div class="table-controls">
          <label for="show-entries">Show
            <select id="show-entries">
              <option value="3">3</option>
              <option value="5">5</option>
              <option value="10">10</option>
            </select>
            entries
          </label>

          <div class="search-box">
            <input type="text" placeholder="Search" />
          </div>
        </div>

        <table id="bundle-table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Bundle Names</th>
              <th>Prize</th>
              <th>Discount</th>
              <th>Status</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>1</td>
              <td>Sample 1</td>
              <td>2000</td>
              <td>123</td>
              <td>Active</td>
              <td>
                <i class='bx bx-show'></i>
                <i class='bx bx-edit'></i>
                <i class='bx bx-trash'></i>
              </td>
            </tr>
            <tr>
              <td>2</td>
              <td>Sample 2</td>
              <td>1585</td>
              <td>456</td>
              <td>Active</td>
              <td>
                <i class='bx bx-show'></i>
                <i class='bx bx-edit'></i>
                <i class='bx bx-trash'></i>
              </td>
            </tr>
            <tr>
              <td>3</td>
              <td>Sample 3</td>
              <td>1895</td>
              <td>789</td>
              <td>Active</td>
              <td>
                <i class='bx bx-show'></i>
                <i class='bx bx-edit'></i>
                <i class='bx bx-trash'></i>
              </td>
            </tr>
          </tbody>
        </table>
        
        <div class="table-info">
          <span>Showing 1 to 3 of 3 Entities</span>
          <div class="pagination-controls">
            <button class="pagination-btn">Previous</button>
            <button class="pagination-btn active">1</button>
            <button class="pagination-btn">Next</button>
          </div>
        </div>
      </div>
    </main>

    <!-- Add Bundle Modal -->
<div id="add-bundle-modal" class="modal hidden">
  <div class="modal-content">
    <span class="close-btn">&times;</span>
    <h3>Add Bundles Form</h3>
    <form id="add-bundle-form">
      <label for="bundle-name">Bundle Names</label>
      <input type="text" id="bundle-name" placeholder="Bundle Name" required />

      <label for="select-product">Select Product</label>
<div id="select-product" class="multi-select">
  <div class="select-box" id="select-box">
    <span>Select Product</span>
    <i class='bx bx-chevron-down'></i>
  </div>
  <div class="checkbox-dropdown hidden">
    <label>
      <input type="checkbox" value="Product 1" /> Product 1
    </label>
    <label>
      <input type="checkbox" value="Product 2" /> Product 2
    </label>
    <label>
      <input type="checkbox" value="Product 3" /> Product 3
    </label>
  </div>
</div>


      <label for="bundle-price">Bundle Price</label>
      <input type="number" id="bundle-price" placeholder="1000" required />

      <label for="bundle-description">Bundle Description</label>
      <textarea id="bundle-description" placeholder="Bundle Description"></textarea>

      <label for="product-discount">Product Discount</label>
      <input type="number" id="product-discount" placeholder="123" />

      <div class="form-actions">
        <button type="submit" class="add-btn">Add</button>
        <button type="button" class="cancel-btn">Cancel</button>
      </div>
    </form>
  </div>
</div>


    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <script src="/js/dashboard.js"></script>
    <script src="/js/bundlepopup.js"></script>
  </body>
</html>
